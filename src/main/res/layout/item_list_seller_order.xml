<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto">

<data>
    <variable
        name="order"
        type="com.android.madeinro.entities.Order" />
</data>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="10dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/senderSuggestionFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="@{order.nameBuyer}"
                android:textStyle="italic"
                android:layout_marginTop="1dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/senderSuggestionLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="14:15 7-07-2021"
                android:textStyle="italic"
                android:layout_marginTop="1dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/totalPriceSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="36 lei"
                android:textStyle="italic"
                android:layout_marginTop="1dp"
                android:padding="3dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/titleSuggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="Pepene"
            android:textStyle="bold"
            android:layout_marginTop="1dp"
            android:padding="3dp"/>


          <Button
                android:id="@+id/acceptOrderButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green_500"
                android:padding="1dp"
                android:text="AcceptÄƒ"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                />

        <Button
            android:id="@+id/denyOrderButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_700"
            android:padding="1dp"
            android:text="Respinge"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            />


    </LinearLayout>
</androidx.cardview.widget.CardView>
</layout>
